@page "/login"

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

@attribute [AllowAnonymous]

<div class="login-container">
    <div class="login-box">
        <h1>WPR</h1>

        <div class="form-group">
            <button class="login-button" @onclick="HandleLogin">
                LOGIN
            </button>
        </div>

        <div class="login-footer">
            <p>If you have no access request <a href="#">here</a>.</p>
        </div>
    </div>
</div>

@code {
    private async Task HandleLogin()
    {
        // Navigation.NavigateTo("MicrosoftIdentity/Account/SignIn", true);
        // Tutaj możesz wywołać właściwy mechanizm logowania,
        // np. ręczne wywołanie przekierowania do Azure AD,
        // gdy użytkownik kliknie przycisk "Login".
        Navigation.NavigateTo("MicrosoftIdentity/Account/SignIn", forceLoad: true);
    }
}

